{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Capacity of nuclear power plants",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ting1999/FIT3179_Week9Homework/main/data/nuclear_power_plants.json"
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {"type": "circle"},
          "encoding": {
            "size": {
              "field": "Capacity",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [10, 100, 500, 1000],
                "range": [10, 50, 150, 200, 300]
              }
            },
            "color": {
              "field": "Capacity", 
              "type": "quantitative",
              "scale":{
                "type": "threshold",
                "domain": [10, 100, 500, 1000],
                "scheme": "reds"
              },
              "legend": {"format": ".1s"}
            },
            "opacity": {
              "value": 0.6
            },
            "tooltip": [
                {"field": "Name", "type": "nominal"},
                {"field": "Country", "type": "nominal"},
                {"field": "Capacity", "type": "quantitative", "format": ","}
              ]
          }
        }
      ]
    }
  ]
}
